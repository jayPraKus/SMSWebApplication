@page 
@model SMSWebAppHost.Pages.SignInModel
<p style="text-align:center"> Welcome to Login Page <br /> Please Log in to continue!...</p>
<div class="">
    <form method="post" asp-page="SignIn" style="width: 22rem;">
        <!-- Email input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="email">Email address</label>
            <input type="email" id="email" asp-for="@Model.Account.Email" class="form-control" />
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="password">Password</label>
            <input type="password" id="password" asp-for="@Model.Account.Password" class="form-control" />
        </div>

        <!-- Submit button -->
        <input type="submit" class="btn btn-primary btn-block mb-4" />

        <!-- Register buttons -->
        <div class="text-center">
            <p>Not a member? <a asp-area="" asp-page="/Account/SignUp"> Register</a></p>
        </div>
    </form>
</div>
